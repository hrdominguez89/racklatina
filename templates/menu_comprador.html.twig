{% set current_route = app.request.get('_route') %}

<li class="nav-item">
    <a href="{{ path('app_home') }}"
       class="nav-link menu-link {% if current_route == 'app_home' or current_route == 'app_secure_external_home' %}active{% endif %}"
       data-key="t-home">
        <i class="ri-home-line"></i>
        <span>Mi portal</span>
    </a>
</li>

<li class="nav-item">
    <a href="{{ path('app_secure_external_customer_request') }}"
       class="nav-link menu-link {% if current_route == 'app_secure_external_customer_request' %}active{% endif %}"
       data-key="t-analytics">
        <i class="ri-tools-line"></i>
        <span>Mis solicitudes</span>
    </a>
</li>

<li class="nav-item">
    <a href="{{ path('app_secure_external_sales_order_sales_order') }}"
       class="nav-link menu-link {% if current_route == 'app_secure_external_sales_order_sales_order' %}active{% endif %}"
       data-key="t-crm">
        <i class="ri-file-list-3-line"></i>
        <span>Ordenes de compra</span>
    </a>
</li>

{% if is_granted('ROLE_ADMINISTRACION') %}
    <li class="nav-item">
        <a class="nav-link menu-link collapsed {% if current_route in ['app_comprobantes_impagos_external', 'app_comprobantes_saldados_external'] %}active{% endif %}"
           href="#sidebarCuentaExternal"
           data-bs-toggle="collapse"
           role="button"
           aria-expanded="{% if current_route in ['app_comprobantes_impagos_external', 'app_comprobantes_saldados_external'] %}true{% else %}false{% endif %}"
           aria-controls="sidebarCuentaExternal"
           data-key="t-crm">
            <i class="ri-folder-user-line"></i>
            <span>Cuenta</span>
        </a>
        <div class="collapse {% if current_route in ['app_comprobantes_impagos_external', 'app_comprobantes_saldados_external'] %}show{% endif %}" id="sidebarCuentaExternal">
            <ul class="nav nav-sm flex-column">
                <li class="nav-item">
                    <a href="{{ path('app_comprobantes_impagos_external') }}"
                       class="nav-link {% if current_route == 'app_comprobantes_impagos_external' %}active{% endif %}"
                       data-key="t-comprobantes-impagos">
                        Comprobantes impagos
                    </a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('app_comprobantes_saldados_external', {tipo: 'TODAS'}) }}"
                       class="nav-link {% if current_route == 'app_comprobantes_saldados_external' %}active{% endif %}"
                       data-key="t-recibos">
                        Recibos
                    </a>
                </li>
            </ul>
        </div>
    </li>
{% endif %}

<li class="nav-item">
    <a href="{{ path('app_secure_external_services') }}"
       class="nav-link menu-link {% if current_route == 'app_secure_external_services' %}active{% endif %}"
       data-key="t-crm">
        <i class="ri-customer-service-2-line"></i>
        <span>Mis Solicitudes de Servicio</span>
    </a>
</li>