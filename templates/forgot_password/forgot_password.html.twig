{% extends 'base_public.html.twig' %}

{% block title %}Racklatina - Portal clientes
{% endblock %}

{% block body %}


	<div class="row justify-content-center">
		<div class="col-md-8 col-lg-6 col-xl-5">
			<div class="card mt-4 card-bg-fill">

				<div class="card-body p-4">
					<div class="text-center mt-2">
						<h5 class="text-rkl-secondary">¿Olvidó su contraseña?</h5>

						<lord-icon src="https://cdn.lordicon.com/rhvddzym.json" trigger="loop" colors="primary:#aca300" class="avatar-xl"></lord-icon>

					</div>

					<div class="alert border-0 alert-warning text-center mb-2 mx-2" role="alert">
						Ingrese su email y le enviaremos un enlace para restablecer su contraseña.
					</div>
					<div class="p-2">
						<form method="post">
							<input type="hidden" name="_csrf_token" value="{{ csrf_token('forgot_password') }}">
							<div class="mb-4">
								<label class="form-label" for="email">email</label>
								<input type="email" name="email" class="form-control" required>
							</div>

							<div class="text-center mt-4">
								<button class="btn btn-primary w-100" type="submit">Enviar</button>
							</div>
						</form>
						<div class="mt-4 text-center">
							<p class="mb-0">¿Recordó su contraseña?
								<a href="{{ path('app_login')}}" class="fw-semibold text-rkl-primary text-decoration-underline">
									Inicie sesión
								</a>
							</p>
						</div>
						<!-- end form -->
					</div>
				</div>
				<!-- end card body -->
			</div>
			<!-- end card -->


		</div>
	</div>

{% endblock %}
