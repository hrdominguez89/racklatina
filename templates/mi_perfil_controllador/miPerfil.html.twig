{% extends 'base.html.twig' %}

{% block title %}Mi Perfil{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="row g-4 align-items-center">
                    <div class="col-md-4 text-center">
                        <img src="{{ asset('path/to/profile-picture.jpg') }}" alt="Foto de Perfil" class="img-fluid rounded-circle shadow" style="max-width: 200px;">
                        <h4 class="mt-3">{{ user.firstName }} {{ user.lastName }}</h4>
                    </div>
                    <div class="col-md-8">
                        <div class="card shadow-sm mb-4">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0">Datos Personales</h5>
                            </div>
                            <div class="card-body">
                                <p class="mb-2"><strong>Nombre:</strong> {{ user.firstName }}</p>
                                <p class="mb-2"><strong>Apellido:</strong> {{ user.lastName }}</p>
                                <p class="mb-2"><strong>DNI:</strong> {{ user.nationalIdNumber }}</p>
                                <p class="mb-2"><strong>Fecha de Nacimiento:</strong> {{ user.birthDate is defined ? user.birthDate|date('Y-m-d') : 'No disponible' }}</p>
                                
                            </div>
                        </div>
                        <div class="card shadow-sm">
                            <div class="card-header bg-secondary text-white">
                                <h5 class="mb-0">Informaci√≥n Adicional</h5>
                            </div>
                            <div class="card-body">
                                <p class="mb-2"><strong>Correo:</strong> {{ user.email ?? 'No disponible' }}</p>
                                <p class="mb-2"><strong>Telefono:</strong> {{ user.phoneNumber ?? 'No disponible' }}</p>
                                <p class="mb-2"><strong>Empresa:</strong> {{ user.companyName ?? 'No disponible' }}</p>
                                <p class="mb-2"><strong>Celular:</strong> {{ user.cellPhoneNumber ?? 'No disponible' }}</p>
                                <p class="mb-2"><strong>Cargo:</strong> {{ user.jobTitle ?? 'No disponible' }}</p>
                                <p class="mb-2"><strong>Sector:</strong> {{ user.sector ?? 'No disponible' }}</p>
                                <p class="mb-2"><strong>Segmento:</strong> {{ user.segment ?? 'No disponible' }}</p>
                                <p class="mb-2"><strong>Pais:</strong> {{ user.country ?? 'No disponible' }}</p>
                                <p class="mb-2"><strong>Provincia:</strong> {{ user.province ?? 'No disponible' }}</p>
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <a href="{{ path('app_mi_perfil_controllador_edicion') }}" class="btn btn-primary">Editar mi perfil</a>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
