{% extends 'base.html.twig' %}

{% block title %}Mi Perfil{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="row g-4 align-items-center">
                    <div class="col-md-4 text-center">
                        <img src="{{ asset('path/to/profile-picture.jpg') }}" alt="Foto de Perfil" class="img-fluid rounded-circle shadow" style="max-width: 200px;">
                        <h4 class="mt-3">{{ user.firstName }} {{ user.lastName }}</h4>
                    </div>
                    <div class="col-md-8">
                        <div class="card shadow-sm mb-4">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0">Datos Personales</h5>
                            </div>
                            <div class="card-body">
                                <p class="mb-2"><strong>Nombre:</strong> {{ user.firstName }}</p>
                                <p class="mb-2"><strong>Apellido:</strong> {{ user.lastName }}</p>
                                <!-- Agrega más datos según sea necesario -->
                            </div>
                        </div>
                        <div class="card shadow-sm">
                            <div class="card-header bg-secondary text-white">
                                <h5 class="mb-0">Información Adicional</h5>
                            </div>
                            <div class="card-body">
                                <p class="mb-2"><strong>DNI:</strong> {{ user.nationalIdNumber }}</p>
                                <p class="mb-2"><strong>Correo:</strong>{{ user.email }}</p>
                                <!-- Agrega más datos según sea necesario -->
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <a href="{{ path('app_mi_perfil_controllador_edicion') }}" class="btn btn-primary">Editar mi perfil</a>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
