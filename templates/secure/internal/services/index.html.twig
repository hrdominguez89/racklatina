{% extends 'base.html.twig' %}

{% block title %}
    Gestión de Servicios
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between bg-galaxy-transparent">
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item">
                                <a href="{{ path('app_home') }}">
                                    Mi portal
                                </a>
                            </li>
                            <li class="breadcrumb-item active">
                                Servicios
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show mt-2" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="row">
            <div class="col-12 d-flex justify-content-between align-items-center mb-3">
                <div>
                    <a href="{{ path('app_secure_internal_services_new') }}" class="btn btn-primary">
                        <i class="ri-add-line align-middle me-1"></i>
                        Nuevo Servicio
                    </a>
                </div>
                <div>
                    <a href="{{ path('app_secure_internal_services') }}" class="btn btn-outline-primary {% if statusFilter == '' %}active{% endif %}">
                        Todos
                    </a>
                    <a href="{{ path('app_secure_internal_services', { status: 1 }) }}" class="btn btn-outline-primary {% if statusFilter == '1' %}active{% endif %}">
                        Pendientes
                    </a>
                    <a href="{{ path('app_secure_internal_services', { status: 2 }) }}" class="btn btn-outline-primary {% if statusFilter == '2' %}active{% endif %}">
                        En Proceso
                    </a>
                    <a href="{{ path('app_secure_internal_services', { status: 3 }) }}" class="btn btn-outline-primary {% if statusFilter == '3' %}active{% endif %}">
                        Completados
                    </a>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <!-- Spinner de carga -->
                        <div id="loading-spinner" class="text-center py-5">
                            <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                                <span class="visually-hidden">Cargando...</span>
                            </div>
                            <p class="mt-3 text-muted">Cargando servicios...</p>
                        </div>

                        <!-- Tabla oculta inicialmente -->
                        <div class="table-responsive" id="table-container" style="display: none;">
                            <table id="tabla-services" class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Fecha</th>
                                        <th>Empresa</th>
                                        <th>Contacto</th>
                                        <th>Email</th>
                                        <th>Nro. Serie</th>
                                        <th>Nro. Seguimiento</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for service in services %}
                                        <tr>
                                            <td>{{ service.serviceid }}</td>
                                            <td>{{ service.servicedate ? service.servicedate|date('d/m/Y') : '-' }}</td>
                                            <td>{{ service.serviceempresa ?? '-' }}</td>
                                            <td>{{ service.servicecontacto ?? '-' }}</td>
                                            <td>{{ service.serviceemail ?? '-' }}</td>
                                            <td>{{ service.servicenroserie ?? '-' }}</td>
                                            <td>{{ service.servicenroseguimiento ?? '-' }}</td>
                                            <td>
                                                {% if service.servicestatus == 1 %}
                                                    <span class="badge bg-warning">Pendiente</span>
                                                {% elseif service.servicestatus == 2 %}
                                                    <span class="badge bg-info">En Proceso</span>
                                                {% elseif service.servicestatus == 3 %}
                                                    <span class="badge bg-success">Completado</span>
                                                {% elseif service.servicestatus == 4 %}
                                                    <span class="badge bg-danger">Rechazado</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">Sin estado</span>
                                                {% endif %}
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group">
                                                    <a href="{{ path('app_secure_internal_services_show', {id: service.serviceid}) }}"
                                                    class="btn btn-sm btn-secondary mx-1"
                                                    title="Ver detalle">
                                                        <i style="font-size:16px;" class="ri-eye-fill"></i>
                                                    </a>
                                                    <a href="{{ path('app_secure_internal_services_edit', {id: service.serviceid}) }}"
                                                    class="btn btn-sm btn-warning mx-1"
                                                    title="Editar">
                                                        <i style="font-size:16px;" class="ri-edit-2-fill"></i>
                                                    </a>
                                                    <form method="post"
                                                        action="{{ path('app_secure_internal_services_delete', {id: service.serviceid}) }}"
                                                        onsubmit="return confirm('¿Está seguro de eliminar este servicio?')"
                                                        style="display: inline;">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ service.serviceid) }}">
                                                        <button type="submit" class="btn btn-sm btn-danger " title="Eliminar">
                                                            <i style="font-size:16px;" class="ri-delete-bin-6-fill"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        window.addEventListener('load', function() {
            console.log('Página cargada, inicializando DataTable...');

            // Esperar a que jQuery esté disponible
            var checkJQuery = setInterval(function() {
                if (typeof $ !== 'undefined' && $.fn && $.fn.DataTable) {
                    clearInterval(checkJQuery);
                    console.log('jQuery y DataTable disponibles');

                    var table = $('#tabla-services').DataTable({
                        "language": {
                            "decimal": "",
                            "emptyTable": "No hay datos disponibles en la tabla",
                            "info": "Mostrando _START_ a _END_ de _TOTAL_ registros",
                            "infoEmpty": "Mostrando 0 a 0 de 0 registros",
                            "infoFiltered": "(filtrado de _MAX_ registros totales)",
                            "infoPostFix": "",
                            "thousands": ",",
                            "lengthMenu": "Mostrar _MENU_ registros",
                            "loadingRecords": "Cargando...",
                            "processing": "Procesando...",
                            "search": "Buscar:",
                            "zeroRecords": "No se encontraron registros coincidentes",
                            "paginate": {
                                "first": "Primero",
                                "last": "Último",
                                "next": "Siguiente",
                                "previous": "Anterior"
                            },
                            "aria": {
                                "sortAscending": ": activar para ordenar la columna de manera ascendente",
                                "sortDescending": ": activar para ordenar la columna de manera descendente"
                            }
                        },
                        "order": [[0, "desc"]],
                        "pageLength": 10,
                        "lengthMenu": [[10, 25, 50, 100, -1], [10, 25, 50, 100, "Todos"]],
                        "columnDefs": [
                            { "orderable": false, "targets": 8 }
                        ],
                        "dom": '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>' +
                               '<"row"<"col-sm-12"tr>>' +
                               '<"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>',
                        "processing": true,
                        "initComplete": function(settings, json) {
                            // Ocultar spinner y mostrar tabla
                            $('#loading-spinner').hide();
                            $('#table-container').fadeIn();
                            console.log('DataTable inicializado correctamente');
                        }
                    });
                }
            }, 100);

            // Timeout después de 5 segundos
            setTimeout(function() {
                clearInterval(checkJQuery);
                if (typeof $ === 'undefined') {
                    console.error('jQuery no se cargó después de 5 segundos');
                }
            }, 5000);
        });
    </script>
{% endblock %}
