{% extends 'base.html.twig' %}

{% block title %}Comprobantes impagos y vencimientos{% endblock %}
{% block body %}    
<div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between bg-galaxy-transparent">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item">
                                    <a href="{{ path('app_home') }}">
                                        Mi portal
                                    </a>
                                </li>
                                 <li class="breadcrumb-item">
                                    <a href="{{ path('app_seccion_cuenta') }}">
                                        Cuentas
                                    </a>
                                </li>
                                <li class="breadcrumb-item active">
                                    Comprobantes impagos y vencimientos
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show mt-2" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Comprobantes Impagos y Vencimientos</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-sm table-striped table-bordered text-center" >
                                    <thead>
                                         <tr class="align-middle">
                                            <th>Fecha</th>
                                            <th>Fecha vto</th>
                                            <th>D/imp</th>
                                            <th>D/Vto</th>
                                            <th>Comprobante</th>
                                            <th>Ord. compra</th>
                                            <th>Total al Vto</th>
                                            <th>Imp a cobrar</th>
                                            <th>Saldo a Cobrar</th>
                                            <th>Nro interno</th>
                                            <th>Obs</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% if comprobantes is empty %}
                                            <tr class="align-middle">
                                                <td colspan="12" class="text-center">
                                                    <em>No hay comprobantes impagos</em>
                                                </td>
                                            </tr>
                                        {% else %}
                                            {% set totalTotalPesos = 0 %}
                                            {% set totalPendientePesos = 0 %}
                                            {% set totalSaldoCobrar = 0 %}
                                            {% for comprobante in comprobantes %}
                                                {% set totalTotalPesos = totalTotalPesos + comprobante.totalpesos %}
                                                {% set totalPendientePesos = totalPendientePesos + comprobante.pendientepesos %}
                                                {# {% set totalSaldoCobrar = totalSaldoCobrar + comprobante.saldoCobrar %} #}
                                                                                <tr class="align-middle">
                                                    <td>{{ comprobante.fecha|date('d/m/Y') }}</td>
                                                    <td>{{ comprobante.fechavencimiento|date('d/m/Y') }}</td>
                                                    <td>{{ comprobante.d_imp }}</td>
                                                    <td>{{ comprobante.d_vto }}</td>
                                                    <td>{{ comprobante.comprobante }}</td>
                                                    <td>{{ comprobante.oc }}</td>
                                                    <td>Campo "totalpesos"{{ comprobante.totalpesos|number_format(2, ',', '.') }}</td>
                                                    <td>Campo "pendientepesos"{{ comprobante.pendientepesos|number_format(2, ',', '.') }}</td>
                                                    <td>Consultar "saldo a cobrar"</td>{# <td>{{ comprobante.saldoCobrar|number_format(2, ',', '.') }}</td> #}
                                                    <td>Consultar "Numero interno"</td>{# <td>{{ comprobante.numeroInterno }}</td> #}
                                                    <td>{{ comprobante.observaciones }}</td>
                                                    <td>
                                                        <div class="btn-group" role="group">
                                                            <button type="button" class="btn btn-sm btn-outline-primary">
                                                                <i class="mdi mdi-file-download mdi-24px"></i>Factura
                                                            </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        {% endif %}
                                    </tbody>
                                    <tfoot class="table-secondary">
                                        <tr>
                                            <td colspan="6" class="text-center fw-bold">Subtotal:</td>
                                            <td class="text-center">Falta agregar variables para subtotales</td>
                                            <td class="text-center">Falta agregar variables para subtotales</td>
                                            <td class="text-center">Falta agregar variables para subtotales</td>
                                        </tr>
                                        <tr>
                                            <td colspan="6" class="text-center fw-bold">Total:</td>
                                            <td class="text-center">TotalPesos{{totalTotalPesos}}</td>
                                            <td class="text-center">TotalPendientePesos{{totalPendientePesos}}</td>
                                            <td class="text-center">TotalPendientePesos{{totalPendientePesos}}</td>
                                            {# <td class="text-end">TotalSaldoCobrar{{totalSaldoCobrar}}</td> #}
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                            
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                <div class="col-12 text-end">
                    <a class="btn btn-secondary" href="{{ path('app_seccion_cuenta') }}">
                        Volver
                    </a>
                </div>
            </div>
            </div>

{% endblock %}
