{% extends 'base.html.twig' %}

{% block title %}Comprobantes saldados{% endblock %}
{% block body %}
    <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between bg-galaxy-transparent">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item">
                                    <a href="{{ path('app_home') }}">
                                        Mi portal
                                    </a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="{{ path('app_seccion_cuenta') }}">
                                        Cuentas
                                    </a>
                                </li>
                                <li class="breadcrumb-item active">
                                    ComprobantesSaldados
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
             {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show mt-2" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}
             <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Comprobantes saldados</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-sm table-striped table-bordered text-center" >
                                    <thead>
                                        <th>Fecha</th>
                                        <th>Comprobante</th>
                                        <th>Orden de compra</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </thead>
                                    <tbody>
                                        {% for comprobante in comprobantes %}
                                        <tr>
                                            <td>{{ comprobante.fecha|date('d/m/Y') }}</td>
                                            <td>{{comprobante.comprobante}}</td>
                                            <td>{{comprobante.ordencompra}}</td>
                                            <td>{{comprobante.estado}}</td>
                                            <td>
                                                 <div class="btn-group" role="group">
                                                    <button type="button" class="btn btn-sm btn-outline-primary">
                                                        <i class="mdi mdi-file-download mdi-24px"></i>Factura
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                <div class="col-12 text-end">
                    <a class="btn btn-secondary" href="{{ path('app_seccion_cuenta') }}">
                        Volver
                    </a>
                </div>
            </div>
             </div>
{% endblock %}
