{% extends 'base.html.twig' %}

{% block title %}
    Remito {{ numero }}
{% endblock %}

{% block body %}
    <div class="container-fluid mt-4">
        <h4>Remito: {{ numero }}</h4>
        <hr>

        {% if remitos is empty %}
            <div class="alert alert-warning" role="alert">
                No se encontraron registros para el remito <strong>{{ numero }}</strong>.
            </div>
        {% else %}
            <table class="table table-striped table-sm">
                <thead class="table-dark">
                    <tr>
                        <th>Fecha</th>
                        <th>Tipo</th>
                        <th>Comprobante</th>
                        <th>Código Artículo</th>
                        <th>Descripción</th>
                        <th>Cliente</th>
                        <th>Razón Social</th>
                        <th>Moneda</th>
                        <th>Cotización</th>
                        <th>Entregado</th>
                        <th>Facturado</th>
                        <th>Pendiente</th>
                    </tr>
                </thead>
                <tbody>
                    {% for r in remitos %}
                        <tr>
                            <td>{{ r.fecha ? r.fecha|date('d/m/Y') : '' }}</td>
                            <td>{{ r.tipoComprobante }}</td>
                            <td>{{ r.nombreComprobante }}</td>
                            <td>{{ r.codigoArticulo }}</td>
                            <td>{{ r.nombreArticulo }}</td>
                            <td>{{ r.codigoCliente }}</td>
                            <td>{{ r.razonSocial }}</td>
                            <td>{{ r.moneda }}</td>
                            <td>{{ r.cotizacion|number_format(2, ',', '.') }}</td>
                            <td>{{ r.entregado }}</td>
                            <td>{{ r.facturado }}</td>
                            <td>{{ r.pendiente }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}

        <div class="text-end mt-3">
            <a href="{{ path('app_secure_external_sales_order_sales_order') }}" class="btn btn-secondary">Volver</a>
        </div>
    </div>
{% endblock %}
