{% extends 'base.html.twig' %}

{% block title %}Comprobantes saldados{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('Datatables/datatables.min.css') }}">
{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between bg-galaxy-transparent">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_home') }}">
                                Mi portal
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="{{ path('app_seccion_cuenta_external') }}">
                                Cuentas
                            </a>
                        </li>
                        <li class="breadcrumb-item active">
                            Comprobantes Saldados
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show mt-2" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    {% if comprobantes is not empty %}
        <div class="row mt-3 mb-3">
            <div class="col-12">
                <h2 class="text-center">
                    Mis Comprobantes Saldados
                </h2>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Comprobantes Saldados</h4>
                    </div>
                    <div class="card-body">
                               
                        <div class="table-responsive">
                            <table id="tabla-comprobantes-saldados" class="table table-sm table-striped table-bordered text-center">
                                <thead>
                                    <tr class="align-middle">
                                        <th>Fecha</th>
                                        <th>Comprobante</th>
                                        <th>Orden de compra</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for comprobante in comprobantes %}
                                        <tr class="align-middle">
                                            {% set fecha_visible = comprobante.fecha ? comprobante.fecha|date('d/m/Y') : '' %}
                                            {% if fecha_visible %}
                                                {% set fecha = fecha_visible|split('/') %}
                                                {% set fecha_ordenada = fecha[2] ~ '/' ~ fecha[1] ~ '/' ~ fecha[0] %}
                                                <td data-order="{{ fecha_ordenada }}">{{ fecha_visible }}</td>
                                            {% else %}
                                                <td data-order="9999-12-31"></td>
                                            {% endif %}
                                            
                                            <td>{{ comprobante.comprobante }}</td>
                                            <td>{{ comprobante.ordencompra }}</td>
                                            <td>{{ comprobante.estado }}</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    
                                                     <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalAsunto">
                                                        Notificar pago
                                                    </button>
                                                    <a href="{{ path('descarga_remito_external', {'remito': comprobante.documento ~ comprobante.claseComprobante ~ comprobante.numeroComprobante}) }}" 
                                                        class="btn btn-sm btn-outline-primary">
                                                        <i class="mdi mdi-file-download mdi-24px"></i>Documento
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                 <!-- Modal -->
                <div class="modal fade" id="modalAsunto" tabindex="-1" aria-labelledby="modalAsuntoLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="modalAsuntoLabel">Nuevo Mensaje</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form id="formularioModal" action ="{{ path('app_notificar_pago_external')}}" method="POST"  enctype="multipart/form-data">
                                    <div class="mb-3">
                                        <label for="mensaje" class="form-label">Mensaje:</label>
                                        <textarea class="form-control" id="mensaje" name="mensaje" rows="6" required></textarea>
                                    </div>
                                    <label for="archivos" class="form-label">Adjuntar archivos:</label>
                                    <input type="file" class="form-control" id="archivos" name="archivos[]" multiple>
                                    <div class="form-text">Puede seleccionar m√∫ltiples archivos</div>
                                </form>
                            </div>
                            <div class="modal-footer">
                               
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                <button type="button" class="btn btn-primary" onclick="enviarFormulario()">Enviar</button>
                            </div>
                        </div>
                    </div>  <!-- Modal -->
            </div>
            
        </div>
    {% else %}
        <div class="alert alert-info text-center" role="alert">
            <h4 class="alert-heading">
                <i class="ri-information-line me-2"></i>
                Sin comprobantes saldados
            </h4>
            <p class="mb-0">
                No tienes comprobantes saldados registrados en este momento.
            </p>
        </div>
    {% endif %}

    <div class="row mt-4">
        <div class="col-12 text-end">
            <a class="btn btn-secondary" href="{{ path('app_seccion_cuenta_external') }}">
                Volver
            </a>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/jquery-3.7.1.min.js') }}"></script>
    <script src="{{ asset('Datatables/datatables.min.js') }}"></script>
    {% if comprobantes is not empty %}
    <script>
    document.addEventListener('DOMContentLoaded', function () {
        // Solo inicializar DataTable si hay comprobantes
            $('#tabla-comprobantes-saldados').DataTable({
                language: {
                    url: esDatatable
                },
                order: [[0, 'desc']], // Ordenar por fecha descendente
                buttons: [
                    'colvis',
                    {
                        extend: 'excelHtml5',
                        title: 'Mis_Comprobantes_Saldados',
                        filename: 'Mis_Comprobantes_Saldados'
                    }
                ],
                dom: "<'row mb-3'<'col-sm-12 col-md-4'l><'col-sm-12 col-md-4 text-center'B><'col-sm-12 col-md-4'f>>" +
                     "<'row'<'col-sm-12'tr>>" +
                     "<'row mt-3'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7'p>>",
                colReorder: true
            });
        });
        </script>
        {% endif %}
         <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script>
        function enviarFormulario() {
            const mensaje = document.getElementById('mensaje').value;
            const archivos = document.getElementById('archivos').files;
            
            
            // Crear FormData para enviar archivos
            const formData = new FormData();
            formData.append('mensaje', mensaje);
            
            // Agregar cada archivo
            for (let i = 0; i < archivos.length; i++) {
                formData.append('archivos[]', archivos[i]);
            }
            
            //console.log('Archivos seleccionados:', archivos.length);
            
            const form = document.getElementById('formularioModal');
            if (form.checkValidity()) {
                form.submit();
            } else {
                alert('Por favor complete todos los campos');
            }
        }
        </script>
        
{% endblock %}