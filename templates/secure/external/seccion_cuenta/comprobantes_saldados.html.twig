            });
        });
    </script>
    <script>
    function descargarRemito(numeroComprobante) {
    // Mostrar spinner
    const spinnerModal = new bootstrap.Modal(document.getElementById('spinnerModal'));
    spinnerModal.show();
    
    const url = "{{ path('descarga_remito_external', {'remito': '__TEMP__'}) }}".replace('__TEMP__', numeroComprobante);
    
    $.ajax({
        url: url,
        type: 'GET',
        headers: {
            'X-Requested-With': 'XMLHttpRequest' // Marca como AJAX
        },
        xhrFields: {
            responseType: 'blob'
        },
        success:async function(data, status, xhr) {
            await spinnerModal.hide();
            // Descarga exitosa
            const blob = new Blob([data]);
            const link = document.createElement('a');
            link.href = window.URL.createObjectURL(blob);
            link.download =  numeroComprobante + '.pdf';
            
            // Peque√±o delay para asegurar que el modal se cierre antes del di√°logo de descarga
            setTimeout(() => {
                link.click();
            }, 100);
            
            setTimeout(() => {
                eleminiarDocumento(numeroComprobante,url)
            },3000);
        },
        error: function(xhr, status, error) {
            // Ocultar spinner
            spinnerModal.hide();
            
            // Error en la descarga - abrir modal de contacto
            abrirModalContactoErrorRemito(numeroComprobante);
        }
    });
}
    function abrirModalContactoErrorRemito(numeroComprobante) {
        // Marcar que no se debe limpiar autom√°ticamente
        window.noLimpiarModal = true;
        
        // Seleccionar la opci√≥n de error en descarga de remito
        $('#contactoModal #div-asunto').empty();
        const selectHTML = `
                <label>Asunto:</label>
                            <select name="asunto" id="asunto" class="form-select">
                            <option value="error_descarga_factura" 
                            selected>Error al descargar archivo</option>
                            </select>`;

        $('#contactoModal #div-asunto').html(selectHTML);
        
        const mensaje = `Error al intentar descargar el archivo ${numeroComprobante}.`;
        $('#contactoModal #mensaje').val(mensaje);
        
        $('#contactoModal').modal('show');
    }
    
    function eleminiarDocumento(numeroComprobante,url)
    {
        $.ajax({
        url: url,
        body:{"numeroComprobante":numeroComprobante},
        type: 'POST',
        headers: {
            'X-Requested-With': 'XMLHttpRequest' // Marca como AJAX
        }
        });
    }
    </script>
{% endblock %}