    </button>
    </div>
        <div class="row mt-3 mb-3">
            <div class="col-12">
                <h2 class="text-center">
                    Mis comprobantes impagos y vencimientos
                </h2>
            </div>
        </div>
    {% endif %}

    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                {% if mostrar_tabla %}
                <script>
        document.addEventListener('DOMContentLoaded', function () {
            
            $('#tabla-comprobantes').DataTable({
                language: {
                    url: esDatatable,
                    emptyTable:"No hay comprobantes disponibles para mostrar"
                },
                order: [[0, 'desc']], // Ordenar por fecha descendente
                buttons: [
                    'colvis',
                    {
                        extend: 'excelHtml5',
                        title: 'Mis_Comprobantes_Impagos',
                        filename: 'Mis_Comprobantes_Impagos'
                    }
                ],
                dom: "<'row mb-3'<'col-sm-12 col-md-4'l><'col-sm-12 col-md-4 text-center'B><'col-sm-12 col-md-4'f>>" +
                    "<'row'<'col-sm-12'tr>>" +
                    "<'row mt-3'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7'p>>",
                colReorder: true
            });
            btnsNotificar = document.querySelectorAll('.btn_notificar_pago');
            btnsNotificar.forEach(btnNotificar => {
            btnNotificar.addEventListener("click", function() {

                const checkboxes = document.querySelectorAll('.checkbox-comprobante:checked');
               if(checkboxes.length === 0) {
                    mostrarAlerta('warning', 'Debe seleccionar al menos un comprobante para notificar');
                    return;
                }
                const emailcobrador = btnNotificar.getAttribute('data-email-cobrador');
                abrirModalNotificarPago(btnNotificar.id,emailcobrador);
            });
        });
            function mostrarAlerta(tipo, mensaje) {
                const alertHTML = `
                    <div class="alert alert-${tipo} alert-dismissible fade show position-fixed top-0 start-50 translate-middle-x mt-3" 
                        style="z-index: 9999; min-width: 300px;" role="alert">
                        ${mensaje}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>`;
                
                document.body.insertAdjacentHTML('beforeend', alertHTML);
                
                // Auto-cerrar después de 3 segundos
                setTimeout(() => {
                    const alert = document.querySelector('.alert');
                    if(alert) {
                        alert.classList.remove('show');
                        setTimeout(() => alert.remove(), 150);
                    }
                }, 3000);
            }
            
        });
    </script>
                <table id="tabla-comprobantes" class="table table-sm table-striped table-bordered text-center">
                    <thead>
                        <tr class="align-middle">
                            <th class="text-center">Fecha de emision</th>
                            <th class="text-center">Fecha de vencimiento</th>
                            <th  class="text-center">Días vencidos</th>
                            <th  class="text-center">Comprobante</th>
                            <th  class="text-center">Orden de compra</th>
                            <th  class="text-center">Total al vencimiento</th>
                            <th  class="text-center">Importe a cobrar</th>
                            <th  class="text-center">Descarga de factura</th>
                            <th  class="text-center">Notificacion de pago</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% if comprobantes is empty %}
                            <tr class="align-middle">
                                <td colspan="12" class="text-center">
                                    <div class="alert alert-info" role="alert">
                                        <i class="ri-information-line me-2"></i>
                                        <strong>Sin comprobantes impagos</strong><br>
                                        No tienes comprobantes impagos o vencimientos pendientes.
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            {% set totalTotalPesos = 0 %}
                            {% set totalPendientePesos = 0 %}
                            {% set totalSaldoCobrar = 0 %}
                            {% for comprobante in comprobantes %}
                                {% set totalTotalPesos = totalTotalPesos + comprobante.totalpesos %}
                                {% set totalPendientePesos = totalPendientePesos + comprobante.pendientepesos %}
                                <tr class="align-middle">
                                    {% set fecha_visible = comprobante.fecha ? comprobante.fecha|date('d/m/Y') : '' %}
                                    {% if fecha_visible %}
                                        {% set fecha = fecha_visible|split('/') %}
                                        {% set fecha_ordenada = fecha[2] ~ '/' ~ fecha[1] ~ '/' ~ fecha[0] %}
                                        <td  class="text-center" data-order="{{ fecha_ordenada }}">{{ fecha_visible }}</td>
                                    {% else %}
                                        <td  class="text-center" data-order="9999-12-31"></td>
                                    {% endif %}
                                    
                                    {% set fecha_visible = comprobante.fechavencimiento ? comprobante.fechavencimiento|date('d/m/Y') : '' %}
                                    {% if fecha_visible %}
                                        {% set fecha = fecha_visible|split('/') %}
                                        {% set fecha_ordenada = fecha[2] ~ '/' ~ fecha[1] ~ '/' ~ fecha[0] %}
                                        <td  class="text-center" data-order="{{ fecha_ordenada }}">{{ fecha_visible }}</td>
                                    {% else %}
                                        <td  class="text-center" data-order="9999-12-31"></td>
                                    {% endif %}
                                    {% if comprobante.fechavencimiento %}
                                    {% set hoy = "now"|date('U') %}
                                    {% set vencimiento = comprobante.fechavencimiento|date('U') %}
                                    {% set dias_diferencia = ((hoy - vencimiento) / 86400)|round %}
                                    <td class="text-center">
                                        {% if dias_diferencia > 0 %}
                                            {{ dias_diferencia }} días
                                        {% elseif dias_diferencia == 0 %}
                                            Vence hoy
                                        {% else %}
                                            Por vencer
                                        {% endif %}
                                    </td>
                                {% else %}
                                    <td class="text-center">-</td>
                                {% endif %}
                                    <td  class="text-center">{{ comprobante.comprobante }}</td>
                                    <td  class="text-center">{{ comprobante.oc }}</td>
                                    <td  class="text-center">{{ comprobante.totalpesos|number_format(2, ',', '.') }}</td>
                                    <td  class="text-center">{{ comprobante.pendientepesos|number_format(2, ',', '.') }}</td>
                                    <td class="align-middle text-center">
                                        <div class="btn-group" role="group" >
                                            <button type="button" 
                                                class="btn btn-sm btn-outline-primary" 
                                                onclick="descargarFactura('{{ comprobante.comprobante }}')">
                                                <i class="mdi mdi-file-download mdi-24px"></i>Factura
                                            </button>
                                            
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <input type="checkbox" 
                                            id='{{ comprobante.comprobante }}' 
                                            class="checkbox checkbox-primary checkbox-comprobante"
                                            value="{{ comprobante.comprobante }} / {{comprobante.totalpesos}}"
                                            style="width: 25px; height: 25px; accent-color: #ffc107; cursor: pointer;">
                                    </td>
                                </tr>
                            {% endfor %}
                            <tfoot class="table-secondary">
                                <tr>
                                    <td colspan="5" class="text-center fw-bold">Total:</td>
                                    <td class="text-center">{{ totalTotalPesos|number_format(2, ',', '.') }}</td>
                                    <td class="text-center">{{ totalPendientePesos|number_format(2, ',', '.') }}</td>
                                </tr>
                            </tfoot>
                                {% endif %}
                    </tbody>
                </table>
                <div class="col-12 text-end mt-2 mb-4">
                    <button type="button" 
                    class="btn btn-primary btn_notificar_pago" 
                    name="btn_notificar" 
                    id="notificador"
                    data-email-cobrador="{{ cliente.emailcobrador }}">
                    Notificar pago
                </button>
                </div>
                {% else %}
