{% block javascripts %}
    {{ parent() }}
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const selectCliente = document.getElementById('Cliente');
                if(selectCliente) {
                    selectCliente.addEventListener('change', function() {
                        if(this.value != 0) {
                            this.form.submit();
                        }
                    });
                }
            });
            function descargarFactura(numeroComprobante) {
                // Mostrar spinner
                const spinnerModal = new bootstrap.Modal(document.getElementById('spinnerModal'));
                spinnerModal.show();
                
            const url = "{{ path('descarga_facturas_external', {'factura': '__TEMP__'}) }}".replace('__TEMP__', numeroComprobante);
            
            $.ajax({
                url: url,
                type: 'GET',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest' // Marca como AJAX
                },
                xhrFields: {
                    responseType: 'blob'
                },
                success: function(data, status, xhr) {
                    // Descarga exitosa
                    const blob = new Blob([data]);
                    const link = document.createElement('a');
                    link.href = window.URL.createObjectURL(blob);
                    link.download =  numeroComprobante + '.pdf';
                    
                    // Ocultar spinner antes de iniciar la descarga
                    spinnerModal.hide();
                    
                    // Pequeño delay para asegurar que el modal se cierre antes del diálogo de descarga
                    setTimeout(() => {
                        link.click();
                    }, 100);
                    
                    setTimeout(() => {
                        eleminiarDocumento(numeroComprobante,url)
                    },3000);
                },
                error: function(xhr, status, error) {
                    // Ocultar spinner
                    spinnerModal.hide();
                    
                    // Error en la descarga - abrir modal de contacto
                    abrirModalContactoErrorFactura(numeroComprobante);
                }
            });
        }
            function eleminiarDocumento(numeroComprobante,url)
            {
                $.ajax({
                url: url,
                body:{"numeroComprobante":numeroComprobante},
                type: 'POST',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest' // Marca como AJAX
                }
                });
            }
            function abrirModalContactoErrorFactura(numeroComprobante) {
                // Marcar que no se debe limpiar automáticamente
                window.noLimpiarModal = true;
                
                // Buscar la fila del comprobante para obtener la orden de compra
                let ordenCompra = 'No disponible';
                
                // Buscar en la tabla el comprobante correspondiente
                $('#tabla-comprobantes tbody tr').each(function() {
                    const comprobanteCelda = $(this).find('td:eq(4)').text().trim(); // Columna 5 (Comprobante)
                    if (comprobanteCelda === numeroComprobante) {
                        ordenCompra = $(this).find('td:eq(5)').text().trim(); // Columna 6 (Ord. compra)
                        return false; // Salir del each
                    }
                });
                $('#contactoModal #div-asunto').empty();
                const selectHTML = `
                <label>Asunto:</label>
                            <select name="asunto" id="asunto" class="form-select" >
                            <option value="error_descarga_factura" 
                            selected>Error al descargar factura</option>
                            </select>`;

                $('#contactoModal #div-asunto').html(selectHTML);
                
                // Llenar el mensaje con la información
                const mensaje = `Error al descargar la Factura: ${numeroComprobante}, Orden de compra: ${ordenCompra}`;
                $('#contactoModal #mensaje').val(mensaje);
                
                // Abrir el modal
                $('#contactoModal').modal('show');
            }
            function abrirModalNotificarPago(numeroComprobante,emailcobrador) {
            // Marcar que no se debe limpiar automáticamente
            window.noLimpiarModal = true;
            
            let impACobrar = 'No disponible';
            let totalPrincipal = 0;
            
            // Buscar la información de la factura principal
            $('#tabla-comprobantes tbody tr').each(function() {
                const comprobanteCelda = $(this).find('td:eq(4)').text().trim(); // Columna 5 (Comprobante)
                if (comprobanteCelda === numeroComprobante) {
                    impACobrar = $(this).find('td:eq(7)').text().trim(); // Columna 8 (Imp a cobrar)
                    // Extraer el valor numérico para sumar
                    totalPrincipal = parseFloat(impACobrar.replace(/[^\d,.-]/g, '').replace(',', '.')) || 0;
                    return false; 
                }
            });
            
            let facturas = [numeroComprobante];
            let totalAdicional = 0;
            let facturasAdicionales = [];
            
            const checkboxes = document.querySelectorAll('.checkbox-comprobante:checked');
            checkboxes.forEach(ch => {
                if (ch.id !== numeroComprobante) {
                    // Extraer número de comprobante y total del value
                    const [comprobante, total] = ch.value.split(' / ');
                    facturas.push(comprobante);
                    facturasAdicionales.push(`${comprobante} ($${total})`);
                    
                    // Sumar el valor de cada factura
                    totalAdicional += parseFloat(total) || 0;
                }
            });
            
            const totalGeneral = totalPrincipal + totalAdicional;
             $('#contactoModal #div-asunto').empty();
             const selectHTML1 = `
                <label>Asunto:</label>
                            <select name="asunto" id="asunto" class="form-select">
                            <option value="notificar_pago" 
                            selected>Notificacion de pago</option>
                            </select>`;

        $('#contactoModal #div-asunto').html(selectHTML1);
            
            $('#contactoModal #div-agente-cobrador').empty();

            const selectHTML = `
                <label>Email del agente cobrador:</label>
                <p name="agentecobrador">${emailcobrador}</p>
                <input type="hidden" name="agentecobrador" value="${emailcobrador}">`;
            
            $('#contactoModal #div-agente-cobrador').html(selectHTML);
            
            $('#contactoModal').off('show.bs.modal').on('show.bs.modal', function() {
                $('#contactoModal #modal-body .alert').remove(); // Elimina alerts anteriores
                const alertHTML = `
                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        <strong>Info:</strong>SE NECESITA ADJUNTO DE COMPROBANTE DE PAGO Y COMPROBANTE DE RETENCIONES.
                        <button type="button" class="btn-close" data-dismiss="alert">
                        </button>
                    </div>`;
                $('#contactoModal #modal-body').prepend(alertHTML);
            });////
           

            let mensaje = `Se notifica del pago de la factura: ${numeroComprobante}`;

            if (facturas.length > 1) {
                mensaje += `\n\nFacturas: ${facturasAdicionales.join(', ')}`;
                mensaje += `\n\nTOTAL GENERAL: $${totalGeneral.toFixed(2)}`;
            }

            $('#contactoModal #mensaje').val(mensaje);
            $('#contactoModal').modal('show');
        }
        </script>
{% endblock %}