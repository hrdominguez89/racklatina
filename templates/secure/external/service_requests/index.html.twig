{% extends 'base.html.twig' %}

{% block title %}
    Mis Solicitudes de Servicio
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between bg-galaxy-transparent">
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item">
                                <a href="{{ path('app_home') }}">
                                    Mi portal
                                </a>
                            </li>
                            <li class="breadcrumb-item active">
                                Mis Solicitudes de Servicio
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show mt-2" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="row">
            <div class="col-12 d-flex justify-content-between align-items-center mb-3">
                <h4 class="mb-0">Solicitudes de Servicio</h4>
                <div>
                    <a href="{{ path('app_secure_external_service_requests_new') }}" class="btn btn-primary">
                        <i class="ri-add-line align-middle me-1"></i>
                        Nueva Solicitud de Servicio
                    </a>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                {% if serviceRequests is empty %}
                    <div class="alert alert-info">
                        No tiene solicitudes de servicio registradas.
                    </div>
                {% else %}
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover" id="tabla-service-requests">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Fecha</th>
                                            <th>Empresa</th>
                                            <th>Marca</th>
                                            <th>Nro. Serie</th>
                                            <th>Estado</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for serviceRequest in serviceRequests %}
                                            <tr>
                                                <td>{{ serviceRequest.id }}</td>
                                                <td>{{ serviceRequest.createdAt ? serviceRequest.createdAt|date('d/m/Y') : '-' }}</td>
                                                <td>{{ serviceRequest.empresa ?? '-' }}</td>
                                                <td>{{ serviceRequest.marca ? serviceRequest.marca.serviceproddescrip : '-' }}</td>
                                                <td>{{ serviceRequest.nroSerie ?? '-' }}</td>
                                                <td>
                                                    {% if serviceRequest.estado == 'pendiente' %}
                                                        <span class="badge bg-warning">Pendiente</span>
                                                    {% elseif serviceRequest.estado == 'en_revision' %}
                                                        <span class="badge bg-info">En Revisi√≥n</span>
                                                    {% elseif serviceRequest.estado == 'aprobado' %}
                                                        <span class="badge bg-primary">Aprobado</span>
                                                    {% elseif serviceRequest.estado == 'en_proceso' %}
                                                        <span class="badge bg-info">En Proceso</span>
                                                    {% elseif serviceRequest.estado == 'completado' %}
                                                        <span class="badge bg-success">Completado</span>
                                                    {% elseif serviceRequest.estado == 'rechazado' %}
                                                        <span class="badge bg-danger">Rechazado</span>
                                                    {% else %}
                                                        <span class="badge bg-secondary">{{ serviceRequest.estado }}</span>
                                                    {% endif %}
                                                </td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        <a href="{{ path('app_secure_external_service_requests_show', {id: serviceRequest.id}) }}"
                                                           class="btn btn-sm btn-info"
                                                           title="Ver detalle">
                                                            <i class="ri-eye-line"></i>
                                                        </a>
                                                        <a href="{{ path('app_secure_external_service_requests_edit', {id: serviceRequest.id}) }}"
                                                           class="btn btn-sm btn-primary"
                                                           title="Editar">
                                                            <i class="ri-edit-line"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            if ($('#tabla-service-requests').length) {
                $('#tabla-service-requests').DataTable({
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json"
                    },
                    "order": [[1, "desc"]],
                    "pageLength": 25
                });
            }
        });
    </script>
{% endblock %}
